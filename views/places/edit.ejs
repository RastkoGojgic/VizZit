<% layout("layout/boilerplate") -%>
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center">Edit Place</h1>
            <form action="/places/<%=place._id%>?_method=PUT" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <section class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="place[title]" required value="<%=place.title%>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </section>
                <section class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" name="place[location]" required value="<%=place.location%>">
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </section>
                <section class="mb-3">
                    <label for="price" class="form-label">Entrance fee:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">RSD</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="place[price]" value="<%= place.price%>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                    </div>
                </section>
                <section class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" name="place[description]" id="description" cols="5" rows="5" required><%=place.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </section>
                <section class="mb-3">
                    <label for="image" class="form-label">Add more images:</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </section>
                <section class="mb-3">
                    <% place.images.forEach((img, i)=>{ %>
                        <img src="<%=img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            <label for="image-<%=i%>">Delete?</label>
                        </div>
                        <% }) %> 
                </section>
                <section class="mb-3">
                    <button class="btn btn-info">Save Changes</button>
                </section>
            </form>
            <a href="/places/<%=place._id%>">Cancel</a>
        </div>
    </div>