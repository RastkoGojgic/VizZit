<% layout("layout/boilerplate") -%>
<div id="cluster-map"></div>
<h1 class="mb-3">All Places</h1>
<% for(place of places){ %>
    <div class="card mb-3">
        <div class="row">
          <div class="col-md-4">
            <%if(place.images.length){%> 
            <img src="<%=place.images[0].url%>" class="img-fluid rounded-start" alt="...">
            <% }else{%>
              <img src="https://res.cloudinary.com/draxxddwf/image/upload/v1663704032/VizZitt/BG_1000x0_pftwf7.jpg" class="img-fluid rounded-start" alt="...">
            <% } %> 
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%=place.title%></h5>
              <p class="card-text"><%=place.description%></p>
              <p class="card-text"><small class="text-muted"><%=place.location%></small></p>
              <a href="/places/<%=place._id%>" class="btn btn-info">View Place</a>
            </div>
          </div>
        </div>
      </div>
    <% } %>

<script>
  const mapToken = "<%-process.env.MAPBOX_TOKEN%>"
  const places = {features:<%-JSON.stringify(places)%>}
</script>

<script src="/javascripts/clusterMap.js"></script>