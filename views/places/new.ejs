<% layout("layout/boilerplate") -%>
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center">Add New Place</h1>
            <form action="/places" method="post" class="needs-validation" novalidate enctype="multipart/form-data">
                <section class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" type="text" id="title" name="place[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </section>
                <section class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" type="text" id="location" name="place[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </section>
                <section class="mb-3">
                    <label for="price" class="form-label">Entrance fee:</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">RSD</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="place[price]" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                    </div>
                </section>
                <section class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" name="place[description]" id="description" cols="5" rows="5" required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </section>
                <section class="mb-3">
                    <label for="image" class="form-label">Add images:</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                </section>
                <section class="mb-3">
                    <button class="btn btn-info">Add Place</button>
                </section>
            </form>
        </div>
    </div>